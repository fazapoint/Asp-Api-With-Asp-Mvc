@model VehicleRentalWeb.Models.Vehicle

<form method="post" action="/Vehicles/Create">
    <div class="form-group">
        <label for="Make">Make:</label>
        <input type="text" id="Make" name="Make" class="form-control" value="@Model.Make" />
    </div>
    <div class="form-group">
        <label for="Model">Model:</label>
        <input type="text" id="Model" name="Model" class="form-control" value="@Model.Model" />
    </div>
    <div class="form-group">
        <label for="Year">Year:</label>
        <input type="text" id="Year" name="Year" class="form-control" value="@Model.Year" />
    </div>
    <div class="form-group">
        <label for="RentalPrice">Rental Price:</label>
        <input type="text" id="RentalPrice" name="RentalPrice" class="form-control" value="@Model.RentalPrice" />
    </div>
    <div class="form-group">
        <label for="AvailabilityStatus">Availability Status:</label>
        <select id="AvailabilityStatus" name="AvailabilityStatus" class="form-control">
            <option value="true">Available</option>
            <option value="false">Not Available</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
